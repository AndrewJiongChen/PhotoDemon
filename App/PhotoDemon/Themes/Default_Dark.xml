<?xml version="1.0" encoding="UTF-8"?>
	
	<pdData>
		
		<pdDataType>Visual theme</pdDataType>
		
		<!-- This is the default "dark theme" file for PhotoDemon 6.8.  Users should not modify this file directly.-->
		
		<Author>PhotoDemon</Author>
		<Description>Default "dark" theme</Description>
		<Version>6.8.0</Version>
		
		<!-- The Definitions section describes any custom, reusable color values you wish to create. -->
		
		<Definitions>
			<DefinitionFile>Colors_Blue.xml</DefinitionFile>
			<AccentDefault>Accent5</AccentDefault>
			<AccentDark>Accent3</AccentDark>
			<AccentUltradark>Accent1</AccentUltradark>
			<AccentLight>Accent7</AccentLight>
			<AccentUltralight>Accent9</AccentUltralight>
			<BackgroundDefault>#313131</BackgroundDefault>
			<BackgroundCanvas>#1e1e1e</BackgroundCanvas>
			<BackgroundCommandBar>#3e3e42</BackgroundCommandBar>
			<GrayDefault>#b1bac2</GrayDefault>
			<GrayDisabled>#929292</GrayDisabled>
			<GrayDark>#d3dde6</GrayDark>
			<GrayLight>#5b5b5b</GrayLight>
			<TextDefault>#c0c0c0</TextDefault>
			<TextDark>#d9d9d9</TextDark>
			<TextEditBox>TextDark</TextEditBox>
			<TextHyperlink>Accent4</TextHyperlink>
			<TextHover>Accent6</TextHover>
			<TextInvert>#313131</TextInvert>
		</Definitions>
		
		<!-- The Colors section contains a hard-coded list of colors used by PD. -->
		<!-- Colors can be hex RGB values, or named colors that correspond to entries in the Definitions section. -->
		<Colors>
		
			<!-- Default colors are not object-specific.  They are used as fallback values if an object lacks a given color. -->
			<Default>
				<Background>BackgroundDefault</Background>
				<Border>GrayDark</Border>
				<Border-active>AccentDark</Border-active>
				<Border-disabled>GrayDisabled</Border-disabled>
				<Border-hover>AccentDefault</Border-hover>
				<Caption>TextDefault</Caption>
				<Caption-disabled>GrayDisabled</Caption-disabled>
			</Default>
			
			<!-- All colors past this point are organized by object name.  Missing values will be taken from the Default section. -->
			
			<!-- ****************************************************************************************** -->
			
			<ButtonStrip>
				<Background></Background>
				<SelectedItemFill>AccentDefault</SelectedItemFill>
				<SelectedItemBorder>AccentDark</SelectedItemBorder> 
				<SelectedText>TextInvert</SelectedText> 
				<UnselectedItemFill>BackgroundDefault</UnselectedItemFill>
				<UnselectedItemBorder>GrayDefault</UnselectedItemBorder>
				<UnselectedItemBorder-hover>AccentDefault</UnselectedItemBorder-hover>
				<UnselectedText>TextDefault</UnselectedText>
				<UnselectedText-hover>TextHyperlink</UnselectedText-hover>
				<SelectedItemFill-disabled>GrayDisabled</SelectedItemFill-disabled>
				<SelectedItemBorder-disabled>GrayDisabled</SelectedItemBorder-disabled> 
				<UnselectedItemBorder-disabled>GrayDisabled</UnselectedItemBorder-disabled> 
				<SelectedText-disabled>BackgroundDefault</SelectedText-disabled> 
				<UnselectedText-disabled>GrayDisabled</UnselectedText-disabled>
				
				<!-- On the Text and Typography tool panels, the button strip uses a "lighter" color scheme for the text justification options.  The control internally defines this as "light mode" and it requires special colors. -->
				<BackgroundLightMode>BackgroundDefault</BackgroundLightMode>
				<SelectedItemFillLightMode>AccentUltralight</SelectedItemFillLightMode>
				<SelectedItemBorderLightMode>AccentLight</SelectedItemBorderLightMode> 
				<SelectedItemBorderLightMode-hover>AccentDefault</SelectedItemBorderLightMode-hover> 
				<SelectedTextLightMode>TextDefault</SelectedTextLightMode> 
				<UnselectedItemFillLightMode>BackgroundDefault</UnselectedItemFillLightMode>
				<UnselectedItemBorderLightMode>BackgroundDefault</UnselectedItemBorderLightMode> 
				<UnselectedItemBorderLightMode-hover>AccentDefault</UnselectedItemBorderLightMode-hover> 
				<UnselectedTextLightMode>TextDefault</UnselectedTextLightMode>
				<SelectedItemFillLightMode-disabled>GrayDisabled</SelectedItemFillLightMode-disabled>
				<SelectedItemBorderLightMode-disabled>GrayDisabled</SelectedItemBorderLightMode-disabled> 
				<UnselectedItemBorderLightMode-disabled>GrayDisabled</UnselectedItemBorderLightMode-disabled> 
				<SelectedTextLightMode-disabled>BackgroundDefault</SelectedTextLightMode-disabled> 
				<UnselectedTextLightMode-disabled>GrayDisabled</UnselectedTextLightMode-disabled>
			</ButtonStrip>
			
			<GenericPDControl>
				<Background>BackgroundDefault</Background>
				<Caption></Caption>
				<Caption-disabled></Caption-disabled>
			</GenericPDControl>
			
			<PDBrushSelector>
				<Border></Border>
				<Border-active></Border-active>
				<Border-disabled></Border-disabled>
				<Border-hover></Border-hover>
			</PDBrushSelector>
			
			<PDButton>
				<Background></Background>
				<Border>GrayDefault</Border>
				<Border-hover>AccentDefault</Border-hover>
				<Border-active>AccentDark</Border-active>
				<Border-disabled>GrayDisabled</Border-disabled>
				<ButtonFill>BackgroundDefault</ButtonFill>
				<ButtonFill-active>AccentLight</ButtonFill-active>
				<ButtonFill-hover>AccentUltralight</ButtonFill-hover>
				<ButtonFill-disabled>GrayLight</ButtonFill-disabled>
				<Caption>TextDark</Caption>
				<Caption-active>TextInvert</Caption-active>
				<Caption-hover>TextDefault</Caption-hover>
				<Caption-disabled>GrayDisabled</Caption-disabled>
			</PDButton>
			
			<PDEditBox>
				<Background>BackgroundDefault</Background>
				<Background-disabled>GrayLight</Background-disabled>
				<Border>GrayDefault</Border>
				<Border-active>AccentDark</Border-active>
				<Border-hover>AccentDefault</Border-hover>
				<Text>TextEditBox</Text>
				<Text-disabled>GrayDefault</Text-disabled>
			</PDEditBox>
			
			<PDGradientSelector>
				<Border></Border>
				<Border-active></Border-active>
				<Border-disabled></Border-disabled>
				<Border-hover></Border-hover>
			</PDGradientSelector>
			
			<PDPenSelector>
				<Border></Border>
				<Border-active></Border-active>
				<Border-disabled></Border-disabled>
				<Border-hover></Border-hover>
			</PDPenSelector>
			
			<PDHyperlink>
				<Background>BackgroundDefault</Background>
				<Caption>TextHyperlink</Caption>
				<Caption-disabled>GrayDisabled</Caption-disabled>
				<Caption-hover>TextHover</Caption-hover>
			</PDHyperlink>
			
			<PDScrollBar>
				<ButtonBorder>BackgroundDefault</ButtonBorder>
				<ButtonFill>BackgroundDefault</ButtonFill>
				<ButtonArrow>GrayDefault</ButtonArrow>
				<ButtonBorder-disabled>GrayLight</ButtonBorder-disabled>
				<ButtonFill-disabled>GrayLight</ButtonFill-disabled>
				<ButtonArrow-disabled>GrayLight</ButtonArrow-disabled>
				<ButtonBorder-active>AccentDefault</ButtonBorder-active>
				<ButtonFill-active>AccentDefault</ButtonFill-active>
				<ButtonArrow-active>TextInvert</ButtonArrow-active>
				<ButtonBorder-hover>AccentDark</ButtonBorder-hover>
				<ButtonFill-hover>BackgroundDefault</ButtonFill-hover>
				<ButtonArrow-hover>AccentDefault</ButtonArrow-hover>
				<ThumbBorder>GrayLight</ThumbBorder>
				<ThumbFill>Graylight</ThumbFill>
				<ThumbBorder-disabled>GrayDark</ThumbBorder-disabled>
				<ThumbFill-disabled>GrayDark</ThumbFill-disabled>
				<ThumbBorder-active>AccentDefault</ThumbBorder-active>
				<ThumbFill-active>AccentLight</ThumbFill-active>
				<ThumbBorder-hover>AccentUltralight</ThumbBorder-hover>
				<ThumbFill-hover>AccentLight</ThumbFill-hover>
				<Track>BackgroundCommandBar</Track>
				<Track-disabled>GrayDefault</Track-disabled>
				
				<!-- On the main window, the scroll bar uses a different color scheme.  The control internally defines this as "canvas mode" and it requires special colors. -->
				<ButtonBorderCanvasMode>BackgroundCommandBar</ButtonBorderCanvasMode>
				<ButtonFillCanvasMode>BackgroundCommandBar</ButtonFillCanvasMode>
				<ButtonArrowCanvasMode>GrayDark</ButtonArrowCanvasMode>
				<ButtonBorderCanvasMode-disabled>GrayLight</ButtonBorderCanvasMode-disabled>
				<ButtonFillCanvasMode-disabled>GrayLight</ButtonFillCanvasMode-disabled>
				<ButtonArrowCanvasMode-disabled>GrayLight</ButtonArrowCanvasMode-disabled>
				<ButtonBorderCanvasMode-active>AccentDefault</ButtonBorderCanvasMode-active>
				<ButtonFillCanvasMode-active>AccentDefault</ButtonFillCanvasMode-active>
				<ButtonArrowCanvasMode-active>TextInvert</ButtonArrowCanvasMode-active>
				<ButtonBorderCanvasMode-hover>AccentLight</ButtonBorderCanvasMode-hover>
				<ButtonFillCanvasMode-hover>AccentUltralight</ButtonFillCanvasMode-hover>
				<ButtonArrowCanvasMode-hover>AccentDefault</ButtonArrowCanvasMode-hover>
				<ThumbBorderCanvasMode>GrayLight</ThumbBorderCanvasMode>
				<ThumbFillCanvasMode>GrayLight</ThumbFillCanvasMode>
				<ThumbBorderCanvasMode-disabled>GrayDark</ThumbBorderCanvasMode-disabled>
				<ThumbFillCanvasMode-disabled>GrayDark</ThumbFillCanvasMode-disabled>
				<ThumbBorderCanvasMode-active>AccentUltralight</ThumbBorderCanvasMode-active>
				<ThumbFillCanvasMode-active>AccentDefault</ThumbFillCanvasMode-active>
				<ThumbBorderCanvasMode-hover>AccentUltralight</ThumbBorderCanvasMode-hover>
				<ThumbFillCanvasMode-hover>AccentLight</ThumbFillCanvasMode-hover>
				<TrackCanvasMode>BackgroundCommandBar</TrackCanvasMode>
				<TrackCanvasMode-disabled>GrayDefault</TrackCanvasMode-disabled>
			</PDScrollBar>
			
			<PDSpinner>
				<Background>BackgroundDefault</Background>
				<Text>TextEditBox</Text>
				<Text-disabled>GrayDefault</Text-disabled>
				<TextBorder>GrayDefault</TextBorder>
				<TextBorder-active>AccentDark</TextBorder-active>
				<TextBorder-hover>AccentDefault</TextBorder-hover>
				<ButtonArrow>GrayDefault</ButtonArrow>
				<ButtonArrow-disabled>GrayLight</ButtonArrow-disabled>
				<ButtonArrow-active>TextInvert</ButtonArrow-active>
				<ButtonArrow-hover>AccentDefault</ButtonArrow-hover>
				<ButtonBorder>BackgroundDefault</ButtonBorder>
				<ButtonBorder-disabled>GrayLight</ButtonBorder-disabled>
				<ButtonBorder-active>AccentDefault</ButtonBorder-active>
				<ButtonBorder-hover>AccentDark</ButtonBorder-hover>
				<ButtonFill>BackgroundDefault</ButtonFill>
				<ButtonFill-disabled>GrayLight</ButtonFill-disabled>
				<ButtonFill-active>AccentDefault</ButtonFill-active>
				<ButtonFill-hover>BackgroundDefault</ButtonFill-hover>
			</PDSpinner>
			
			<!-- ****************************************************************************************** -->
		
		</Colors>
		
	</pdData>
	